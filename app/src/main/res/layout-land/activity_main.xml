<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/MENU_INICIO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="1dp"
        >
        <TextView
            android:id="@+id/text_Guainia"
            style="@style/dimensiones"
            android:text="@string/guainia"
            android:textSize="60sp"
            android:layout_gravity="center"
            android:textColor="@color/dodgerblue"
            />

        <TextView
            android:id="@+id/text_intro_1"
            style="@style/dimensiones"
            android:text="@string/tierra"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/darkorange"
            />
        <ImageView
            android:id="@+id/iv_animacion"
            android:layout_marginTop="20dp"
            style="@style/dimensiones"
            android:layout_gravity="center"
            android:gravity="center"/>


        <LinearLayout
            style="@style/dimensiones"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <ImageButton

                    android:id="@+id/Bt_demo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/demo"
                    android:layout_gravity="center"
                    android:background="@color/paleturquoise"
                    android:layout_marginTop="20dp"

                    /></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <ImageButton
                    android:id="@+id/Bt_sunny"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sunny66"
                    android:layout_gravity="center"
                    android:background="@color/khaki"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    /></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <ImageButton
                    android:id="@+id/Bt_beer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/beer"
                    android:layout_gravity="center"
                    android:background="@color/lightsalmon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    /></LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/dimensiones"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <ImageButton
                    android:id="@+id/Bt_hotel"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bellhop"
                    android:layout_gravity="center"
                    android:background="@color/palegreen"
                    android:layout_marginTop="8dp"

                    /></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <ImageButton
                    android:id="@+id/Bt_inf"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/information57"
                    android:layout_gravity="center"
                    android:background="@color/gainsboro"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"


                    /></LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>